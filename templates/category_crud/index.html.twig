{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block body %}
<div class="container">
    <h1>Catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Localisation</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.location }}</td>
                <td>
                    {# Tout le monde peut voir #}
                    <a href="{{ path('app_category_crud_show', {'id': category.id}) }}"
                       class="btn btn-info btn-sm">
                        show
                    </a>

                    {# Edit à partir de MANAGER/SENIOR #}
                    {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_SENIOR')
                           or is_granted('ROLE_DIRECTEUR') or is_granted('ROLE_ADMIN') %}
                        <a href="{{ path('app_category_crud_edit', {'id': category.id}) }}"
                           class="btn btn-primary btn-sm ms-1">
                            edit
                        </a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="mt-3">
        {# Création : ADMIN / DIRECTEUR seulement #}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTEUR') %}
            <a href="{{ path('app_category_crud_new') }}" class="btn btn-nouveau">
                + Nouvelle catégorie
            </a>
        {% endif %}
    </div>
</div>
{% endblock %}
