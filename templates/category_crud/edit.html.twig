{% extends 'base.html.twig' %}

{% block title %}Modifier la catégorie{% endblock %}

{% block body %}
<div class="container">
    <h1>Modifier la catégorie</h1>

    <div class="card mt-4">
        <div class="card-body">
            {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.name, 'Nom de la catégorie', {
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_widget(form.name, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex : Brumes corporelles'
                            }
                        }) }}
                    </div>

                    <div class="col-md-6 mb-3">
                        {{ form_label(form.location, 'Localisation', {
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_widget(form.location, {
                            'attr': {
                                'class': 'form-control',
                                'placeholder': 'Ex : Rayon A'
                            }
                        }) }}
                    </div>

                    <div class="col-12 mb-3">
                        {{ form_label(form.description, 'Description', {
                            'label_attr': {'class': 'form-label'}
                        }) }}
                        {{ form_widget(form.description, {
                            'attr': {
                                'class': 'form-control',
                                'rows': 3,
                                'placeholder': 'Notes sur cette catégorie'
                            }
                        }) }}
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center mt-4">
                    <a href="{{ path('app_category_crud_index') }}" class="btn btn-secondary">
                        ⬅ Retour à la liste
                    </a>

                    <div class="d-flex gap-2">
                        {{ include('category_crud/_delete_form.html.twig') }}
                        <button class="btn btn-primary">
                            Mettre à jour
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
