    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    
    <style>
    .kazm-back-btn {
        position: fixed;
        top: 20px;
        left: 50%;
        transform: translateX(-50%);
        z-index: 9999;
        border: none;
        border-radius: 999px;
        padding: 10px 22px;
        font-weight: 600;
        font-size: 0.85rem;
        letter-spacing: 0.5px;
        text-transform: uppercase;
        color: #ffffff;
        background: linear-gradient(135deg, #ffc5d9, #f0e3ff);
        box-shadow: 0 4px 15px rgba(194, 123, 160, 0.35);
        transition: all 0.3s ease;
    }
    .kazm-back-btn:hover {
        transform: translateX(-50%) translateY(-2px);
        box-shadow: 0 6px 20px rgba(194, 123, 160, 0.5);
        background: linear-gradient(135deg, #f0e3ff, #ffc5d9);
    }

    #theme-toggle {
        position: fixed;
        top: 20px;
        right: 20px;
        z-index: 9999;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        border: none;
        background: linear-gradient(135deg, #ffc5d9, #f0e3ff);
        box-shadow: 0 4px 12px rgba(194, 123, 160, 0.35);
        cursor: pointer;
    }
</style>

    {% block stylesheets %}{% endblock %}
</head>
<body>
    {# Bouton Retour Dashboard visible sur toutes les pages #}
    <a href="{{ path('app_dashboard') }}" class="kazm-back-btn">
        â¬… Dashboard
    </a>

    <button id="theme-toggle">ðŸŒ™</button>

    {% block body %}{% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
      const body = document.body;
      const toggle = document.getElementById('theme-toggle');

      const saved = localStorage.getItem('theme');
      if (saved === 'dark') body.classList.add('dark');

      toggle.addEventListener('click', () => {
        body.classList.toggle('dark');
        localStorage.setItem(
          'theme',
          body.classList.contains('dark') ? 'dark' : 'light'
        );
      });
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>
