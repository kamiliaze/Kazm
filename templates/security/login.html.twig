{% extends 'base.html.twig' %}

{% block title %}Connexion - Kazm Stock{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow" style="border-radius: 20px; border: 2px solid #FFB6C1;">
