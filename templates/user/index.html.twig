{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">üë• Gestion des Utilisateurs</h1>
        <a href="{{ path('app_user_new') }}" class="btn btn-success">
            ‚ûï Nouvel Utilisateur
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Nom Complet</th>
                            <th>Email</th>
                            <th>CIN</th>
                            <th>T√©l√©phone</th>
                            <th>Bureau</th>
                            <th>Date d'embauche</th>
                            <th>R√¥le</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.firstName }} {{ user.lastName }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.cin ?? '-' }}</td>
                            <td>{{ user.phone ?? '-' }}</td>
                            <td>{{ user.office ?? '-' }}</td>
                            <td>{{ user.hireDate ? user.hireDate|date('d/m/Y') : '-' }}</td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    <span class="badge bg-danger">üî¥ ADMIN</span>
                                {% elseif 'ROLE_DIRECTEUR' in user.roles %}
                                    <span class="badge bg-danger">üî¥ DIRECTEUR</span>
                                {% elseif 'ROLE_MANAGER' in user.roles %}
                                    <span class="badge bg-warning text-dark">üü† MANAGER</span>
                                {% elseif 'ROLE_SENIOR' in user.roles %}
                                    <span class="badge bg-info">üü° SENIOR</span>
                                {% else %}
                                    <span class="badge bg-success">üü¢ JUNIOR</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if user.isActive %}
                                    <span class="badge bg-success">Actif</span>
                                {% else %}
                                    <span class="badge bg-secondary">Inactif</span>
                                {% endif %}
                            </td>
                            <td class="d-flex gap-1">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}"
                                   class="btn btn-sm btn-info"
                                   title="Voir">üëÅÔ∏è</a>

                                <a href="{{ path('app_user_edit', {'id': user.id}) }}"
                                   class="btn btn-sm btn-warning"
                                   title="Modifier">‚úèÔ∏è</a>

                                {# Bouton supprimer #}
                                <form method="post"
                                      action="{{ path('app_user_delete', {'id': user.id}) }}"
                                      onsubmit="return confirm('Supprimer cet utilisateur ?');"
                                      style="display:inline-block;">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ user.id) }}">
                                    <button class="btn btn-sm btn-danger" title="Supprimer">
                                        üóëÔ∏è
                                    </button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="9" class="text-center">Aucun utilisateur trouv√©</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}
