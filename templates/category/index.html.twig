{% extends 'base.html.twig' %}

{% block title %}Liste des cat√©gories{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üìÇ Liste des cat√©gories</h1>

        {# Ajouter : seulement ADMIN / DIRECTEUR #}
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTEUR') %}
            <a href="{{ path('category_new') }}" class="btn btn-success">
                ‚ûï Ajouter une cat√©gorie
            </a>
        {% endif %}
    </div>

    <div class="card">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Emplacement</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for category in categories %}
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>{{ category.description }}</td>
                        <td>{{ category.location }}</td>
                        <td>
                            {# Modifier : √† partir de MANAGER/SENIOR #}
                            {% if is_granted('ROLE_MANAGER') or is_granted('ROLE_SENIOR')
                                   or is_granted('ROLE_DIRECTEUR') or is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('category_edit', {id: category.id}) }}"
                                   class="btn btn-sm btn-warning">
                                    ‚úèÔ∏è Modifier
                                </a>
                            {% endif %}

                            {# Supprimer : uniquement ADMIN / DIRECTEUR #}
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_DIRECTEUR') %}
                                <form method="post"
                                      action="{{ path('category_delete', {id: category.id}) }}"
                                      style="display:inline-block"
                                      onsubmit="return confirm('Supprimer cette cat√©gorie ?');">
                                    <input type="hidden" name="_token"
                                           value="{{ csrf_token('delete' ~ category.id) }}">
                                    <button class="btn btn-sm btn-danger">
                                        üóë Supprimer
                                    </button>
                                </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">
                            Aucune cat√©gorie pour le moment.
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
